# ==========================================================
# ResearchGPT Assistant - Example Environment Configuration
# Copy this file to `.env` and replace placeholder values.
# ==========================================================

# --- Mistral API Settings ---
MISTRAL_API_KEY=sk-your-api-key-here  # REQUIRED
MODEL_NAME=mistral-medium-latest
MODEL_FALLBACKS=mistral-small-latest, mistral-tiny-latest

# --- Model Behavior ---
TEMPERATURE=0.2          # Controls output creativity (0.0â€“1.0)
MAX_TOKENS=384           # Maximum tokens per response

# --- Document Processing ---
CHUNK_SIZE=1000          # Character size for text chunks
OVERLAP=100              # Overlap between chunks

# --- API Robustness Settings ---
API_MAX_RETRIES=4        # Retry attempts on API error
API_RETRY_BACKOFF_BASE=1.5
API_RETRY_BACKOFF_MAX=12
API_THROTTLE_SEC=1.25    # Delay between API calls to avoid rate limits
API_CAPACITY_COOLDOWN_SEC=60

# --- Directories ---
DATA_DIR=data
SAMPLE_PAPERS_DIR=data/sample_papers
PROCESSED_DIR=data/processed
RESULTS_DIR=results
LOG_DIR=logs

# --- Logging ---
LOG_FILE=app.log
LOG_LEVEL=INFO

# --- Optional Offline Mode ---
# Set to "true" to disable API calls for local testing
OFFLINE_MODE=false
